<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_weight="0.45"
       android:layout_height="0dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="33dp">

        <ImageView
            android:id="@+id/imgCharacter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src = "@drawable/test" />

        <View
            android:id="@+id/imgOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/targaryenOverlay" />

        <TextView
            android:id="@+id/labelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_above="@+id/labelTitle"
            tools:text = "John Snow"/>

        <TextView
            android:id="@+id/labelTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="80dp"
            tools:text = "Lord Comandante de la Guardia Nocturna"/>

    </RelativeLayout>

       <com.google.android.material.floatingactionbutton.FloatingActionButton
           android:id="@+id/btnHouse"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="bottom|end"
           android:layout_marginBottom="5dp"
           android:layout_marginEnd="16dp"
           android:layout_marginRight="16dp"
           android:scaleType="center"
           android:src = "@drawable/ic_baratheon"
           app:fabSize="normal" />

</FrameLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="0.55"
       android:padding = "16dp"
       android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personaje"
        android:textSize="25dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/labelBorn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_born"
        android:drawableStart="@drawable/ic_born"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        tools:text= "283 AC"/>

    <TextView
        android:id="@+id/labelActor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/ic_actor"
        android:drawableStart="@drawable/ic_actor"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        tools:text= "Kit Harington"/>

    <TextView
        android:id="@+id/labelQuote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/ic_words"
        android:drawableStart="@drawable/ic_words"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        tools:text= "I know nothing"/>

    <TextView
        android:id="@+id/labelParents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/ic_parents"
        android:drawableStart="@drawable/ic_parents"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        tools:text= "Ned Stark"/>

    <TextView
        android:id="@+id/labelSpouse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/ic_spouse"
        android:drawableStart="@drawable/ic_spouse"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        tools:text= "Sin esposa"/>

</LinearLayout>

</LinearLayout>